<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet author="daniladotsenko" id="add-seller-id-to-products">
        <addColumn tableName="products">
            <column name="seller_id" type="BIGINT"/>
        </addColumn>

        <update tableName="products">
            <column name="seller_id" valueNumeric="2"/>
            <where>1=1</where>
        </update>

        <addNotNullConstraint
          tableName="products"
          columnName="seller_id"
          columnDataType="BIGINT"/>

        <dropColumn tableName="products" columnName="seller"/>

        <addForeignKeyConstraint
          baseTableName="products"
          baseColumnNames="seller_id"
          referencedTableName="users"
          referencedColumnNames="id"
          constraintName="fk_product_seller"
          onDelete="RESTRICT"/>

  </changeSet>
</databaseChangeLog>