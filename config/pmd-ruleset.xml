<?xml version="1.0" encoding="UTF-8"?>
<ruleset description="Пользовательский набор правил для проверки кода Java"
  name="Custom Ruleset"
  xmlns="https://pmd.sourceforge.io/ruleset_2_0_0.xsd">

  <description>
    Набор правил для улучшения качества кода Java.
  </description>

  <!-- Правила для выявления потенциальных проблем -->
  <rule ref="rulesets/java/design.xml/AvoidLongMethods"/>
  <rule ref="rulesets/java/design.xml/AvoidUnusedPrivateMethods"/>
  <rule ref="rulesets/java/codesize.xml/ExcessiveMethodLength"/>
  <rule ref="rulesets/java/braces.xml/UnusedImports"/>
  <rule ref="rulesets/java/codesize.xml/ExcessiveClassLength"/>

  <!-- Правила для проверки стиля -->
  <rule ref="rulesets/java/naming.xml/MethodNamingConventions"/>
  <rule ref="rulesets/java/naming.xml/ClassNamingConventions"/>
  <rule ref="rulesets/java/codesize.xml/ExcessivePublicCount"/>

  <!-- Правила для улучшения читаемости -->
  <rule ref="rulesets/java/strings.xml/StringLiteralEquality"/>
  <rule ref="rulesets/java/useless.xml/UselessStringValueOf"/>

</ruleset>